<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="ChatClient.Views.MessageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Border
        Background="White"
        HorizontalOptions="Center"
        Padding="16,8"
        Stroke="#DDDDDD"
        StrokeThickness="2">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10,10,10,10" />
        </Border.StrokeShape>
        <Label
            FontAttributes="Bold"
            FontSize="18"
            Text="{Binding Message}"
            TextColor="Black" />
    </Border>

</ContentPage>
